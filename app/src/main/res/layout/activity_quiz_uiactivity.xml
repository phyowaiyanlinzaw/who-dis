<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    android:fillViewport="true"
    tools:context=".QuizUIActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/txv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/background"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:text="Who Dis?" />

        <ImageView
            android:id="@+id/imv_question"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:contentDescription="@string/question_1"
            android:padding="10dp"
            tools:src="@drawable/ic_chuu" />

        <LinearLayout
            android:id="@+id/progressBarLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:indeterminate="false"
                android:max="10"
                android:minHeight="50dp"
                android:progress="1"
                />

            <TextView
                android:id="@+id/progressBar_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColorHint="@color/background"
                android:textSize="20sp"
                tools:text="1 of 10" />

        </LinearLayout>

        <TextView
            android:id="@+id/option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/default_option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/background"
            android:textSize="20sp"
            tools:text="Jennie" />

        <TextView
            android:id="@+id/option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/default_option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/background"
            android:textSize="20sp"
            tools:text="Ryujin" />

        <TextView
            android:id="@+id/option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/default_option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/background"
            android:textSize="20sp"
            tools:text="Chuu" />

        <TextView
            android:id="@+id/option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/default_option_border_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/background"
            android:textSize="20sp"
            tools:text="Sana" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/background"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/background2"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>